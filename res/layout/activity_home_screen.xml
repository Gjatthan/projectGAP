<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Screen">

    <androidx.cardview.widget.CardView
        android:id="@+id/iviewCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:background="@color/teal_700"
        app:layout_constraintCircleRadius="@dimen/default_pressed_glow_size">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:id="@+id/userprofileimg"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/savings_morning">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savings"
                android:gravity="center"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/button">
                <TextView
                    android:id="@+id/txtsavings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_gravity="left"
                    android:textSize="15dp"
                    android:text="xxxxxx"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/hindkochi" />
                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1.8"
                    android:layout_gravity="center_vertical"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/eye"
                    android:id="@+id/savings_eye"
                    android:onClick="onClickShowBalance"/>

            </LinearLayout>
            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="View More"
                android:textSize="8dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/transparent"
                android:textColor="@color/white"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/hindkochi"
                android:id="@+id/btnsaveVmore"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/savings_morning">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrowings"
                android:gravity="center"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/button">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_gravity="left"
                    android:textSize="15dp"
                    android:text="xxxxxx"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/hindkochi"
                    android:id="@+id/txtborrow"/>
                <ToggleButton
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@drawable/eye"
                    android:layout_weight="1.8"
                    android:id="@+id/borrow_eye"
                    android:layout_gravity="center_vertical"
                    android:textOff=""
                    android:textOn=""
                    android:onClick="onClickShowBalance"/>

            </LinearLayout>
            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="View More"
                android:textSize="8dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/transparent"
                android:layout_marginTop="80dp"
                android:textColor="@color/white"
                android:fontFamily="@font/hindkochi"
                android:id="@+id/btnborrowVmore"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ripple"
        android:layout_width="315dp"
        android:layout_height="328dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="520dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ripple3" />

    <TextView
        android:id="@+id/txtgreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hindkochisemi"
        android:text="Good Morning"
        android:gravity="left"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/hindkochibold"
        android:gravity="left"
        android:text="Anmol"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/btm_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fadingEdgeLength="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:mbn_backgroundBottomColor="@color/teal_700"
        app:mbn_circleColor="@color/white"
        app:mbn_defaultIconColor="@color/white"
        app:mbn_selectedIconColor="@color/teal_700"
        android:animateLayoutChanges="true" />

    <View
        android:id="@+id/view3"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/btm_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/fundtransfer"
                    android:id="@+id/fundtransfer"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/epassbook"
                    android:id="@+id/epass"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/qr_code"
                    android:id="@+id/my_qr"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fund Transfer"
                android:fontFamily="@font/hindkochisemi"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="E-Pass"
                android:fontFamily="@font/hindkochisemi"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My QR Code"
                android:fontFamily="@font/hindkochisemi"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
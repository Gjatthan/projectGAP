<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".OTP">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103"
        app:srcCompat="@drawable/bro" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="340dp"
        android:layout_height="149dp"
        android:background="@drawable/round_card"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424">

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/hindkochibold"
            android:text="We have sent one time password to your phone number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtphonenum"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindkochi"
            android:text="+91 8904300710"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView

            android:id="@+id/txttimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/hindkochisemi"
            android:text="1:00"
            android:textColor="@color/basic_color"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="338dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        app:layout_constraintVertical_bias="0.047">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"
            android:fontFamily="@font/hindkochi"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/basic_color" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:fontFamily="@font/hindkochi"
            android:textColor="@color/basic_color"

            />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:fontFamily="@font/hindkochi"
            android:textColor="@color/basic_color" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"
            android:fontFamily="@font/hindkochi"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/basic_color" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"
            android:textColor="@color/basic_color"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:fontFamily="@font/hindkochi"/>

        <EditText
            android:id="@+id/otp6"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/otptext"
            android:ems="10"

            android:fontFamily="@font/hindkochi"
            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/basic_color" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.686" />

    <Button
        android:id="@+id/btnresend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fontFamily="@font/hindkochisemi"
        android:text="Resend OTP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.241"
        android:onClick="onClickResend"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction_Pin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Enter Transaction Pin"
        android:textColor="@color/teal_700"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/hindkochisemi"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/txt_pin"
        android:layout_width="281dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/hindkochibold"
        android:gravity="center"
        android:inputType="numberPassword"
        android:letterSpacing=".5"
        android:maxLength="4"
        android:hint="----"
        android:textSize="60dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn7"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn8"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:onClick="onClickPin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn6"
                android:onClick="onClickPin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn1"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn2"
                android:onClick="onClickPin"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn3"
                android:onClick="onClickPin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="clear"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:onClick="onClickClear"
                android:src="@drawable/clear"
                android:padding="30dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:background="@color/transparent1"
                android:layout_weight="1"
                android:id="@+id/btn0"
                android:onClick="onClickPin"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="OK"
                android:fontFamily="@font/hindkochisemi"
                android:textSize="20dp"
                android:src="@drawable/check2"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@color/transparent1"
                android:padding="15dp"
                android:id="@+id/imgproceed"
                android:onClick="onClickPay"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
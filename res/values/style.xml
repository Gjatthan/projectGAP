<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonround" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:radius">20dp</item>
        <item name="android:strokeColor">@color/basic_color</item>

        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="lpinreset" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>
    <style name="bynstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@drawable/btn2_gradient</item>
    </style>

    <style name="CustomFontDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/hindkochi</item>
    </style>

    <style name="FundTransfer" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- This code is for changing the color of the bar. -->
        <!-- Type your colour code which you want to set in colorPrimary item -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/hindkochi</item>
    </style>

    <style name="PauseDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="cardDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/cardDialogAnimation</item>
    </style>

    <style name="cardDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/entry</item>
        <item name="android:windowExitAnimation">@anim/exit</item>
    </style>
</resources>